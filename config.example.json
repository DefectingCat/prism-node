{
  // 服务器监听地址和端口
  "addr": "127.0.0.1:10808",

  // SOCKS 代理服务器地址和端口
  "socks_addr": "127.0.0.1:13659",

  // Hono HTTP 服务器地址和端口
  "http_addr": "127.0.0.1:3000",

  // 静态资源目录路径（可选，默认为 "./html"）
  "static_dir": "./dist/html",

  // 日志文件路径（可选，默认为空）
  "log_path": "./logs/prism-node.log",

  // PostgreSQL 数据库配置
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "database": "prism_node",
    "user": "postgres",
    "password": "your_password",
    "pool": {
      "max": 10,
      "idleTimeoutMillis": 30000,
      "connectionTimeoutMillis": 2000
    }
  },

  // Node-cron 定时任务配置（可选）
  // 格式：Cron 表达式，例如 "0 0 * * 0" 表示每周日0点执行一次
  "cron": "0 0 * * 0",

  // 是否启用数据库功能（可选，默认为 false）
  // 当设置为 false 时，所有数据库相关功能将被禁用，包括统计数据存储和查询
  "enableDatabase": false,

  // 域名白名单配置（可选）
  // 匹配到白名单中的域名时，将直接连接目标服务器，不通过 SOCKS 代理
  // 支持精确匹配和通配符匹配（如 *.example.com 匹配 sub.example.com）
  "whitelist": ["example.com", "*.google.com", "localhost"]
}
