{
  // 服务器监听地址和端口
  "addr": "127.0.0.1:10808",

  // SOCKS 代理服务器地址和端口
  "socks_addr": "127.0.0.1:13659",

  // Hono HTTP 服务器地址和端口
  "http_addr": "127.0.0.1:3000",

  // 静态资源目录路径（可选，默认为 "./html"）
  "static_dir": "./dist/html",

  // 日志文件路径（可选，默认为空）
  "log_path": "./logs/prism-node.log",

  // PostgreSQL 数据库配置
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "database": "prism_node",
    "user": "postgres",
    "password": "your_password",
    "pool": {
      "max": 10,
      "idleTimeoutMillis": 30000,
      "connectionTimeoutMillis": 2000
    }
  }
}
